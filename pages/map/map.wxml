<view class="box" hover-class="none" hover-stop-propagation="false">
  <map id="map" longitude="113.324520" latitude="23.099994" scale="14" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 100vh;"></map>
  <view class="share" hover-class="none" hover-stop-propagation="false">
    <image class="" src="../../images/share22.png" mode="aspectFit" lazy-load="false" binderror="" bindload="">
      <button open-type="share"></button>
    </image>
  </view>
  <view class="address" hover-class="none" hover-stop-propagation="false">
    <view class="title" hover-class="none" hover-stop-propagation="false">
      {{title}}
    </view>
    <view class="content" hover-class="none" hover-stop-propagation="false">
      {{content}}
    </view>
  </view>
</view>